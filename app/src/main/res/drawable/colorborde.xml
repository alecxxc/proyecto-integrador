<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fondo transparente -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/> <!-- Fondo transparente -->
            <corners android:radius="10dp"/> <!-- Esquinas más redondeadas -->
        </shape>
    </item>

    <!-- Borde color #5e323a -->
    <item android:top="1dp" android:left="1dp" android:right="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#5e323a"/> <!-- Color del borde -->
            <corners android:radius="16dp"/> <!-- Esquinas más redondeadas -->
        </shape>
    </item>
</layer-list>
